<Window x:Class="WatchedFilmsTracker.Source.Views.RenameColumnDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WatchedFilmsTracker.Source.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Loaded="RenameColumnDialog_Loaded"

    SizeToContent="WidthAndHeight"
        Title="RenameColumn">

    <Grid Margin="15,15,15,15">

        <StackPanel Orientation="Vertical">
            <GroupBox>
                <GroupBox.Header>Column name</GroupBox.Header>
                <DockPanel>
                    <TextBox x:Name="TextBoxColumnName"
                             VerticalAlignment="Center" />
                </DockPanel>
            </GroupBox>

            <StackPanel Orientation="Horizontal">
                <Button VerticalAlignment="Center"
                        Margin="5,0,5,0"
                        Click="ConfirmButton">Confirm</Button>
                <Button Click="CancelButton">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>